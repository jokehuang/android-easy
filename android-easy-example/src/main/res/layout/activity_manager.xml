<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        style="@style/ll">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h300"
            android:background="@color/bg_green"></ListView>

        <Button
            android:id="@+id/btn_start_activity"
            style="@style/btn_main"
            android:text="Start Activity"/>

        <Button
            android:id="@+id/btn_finish_manager"
            style="@style/btn_main"
            android:text="Finish ManagerActivity"/>

        <Button
            android:id="@+id/btn_finish_all"
            style="@style/btn_main"
            android:text="Finish All"/>
    </LinearLayout>
</ScrollView>