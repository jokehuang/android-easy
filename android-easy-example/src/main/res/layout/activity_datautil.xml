<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        style="@style/ll">

        <EditText
            android:id="@+id/et_md5"
            style="@style/btn_main"
            android:text="Test MD5"/>

        <Button
            android:id="@+id/btn_encode_md5"
            style="@style/btn_main"
            android:text="Encode MD5"/>

        <EditText
            android:id="@+id/et_reverse"
            style="@style/btn_main"
            android:text="38F75"/>

        <Button
            android:id="@+id/btn_reverse"
            style="@style/btn_main"
            android:text="Reverse"/>

        <EditText
            android:id="@+id/et_bytes"
            style="@style/btn_main"
            android:text="38F75"/>

        <EditText
            android:id="@+id/et_copy"
            style="@style/btn_main"
            android:editable="false"
            android:hint="Copy Result"/>

        <Button
            android:id="@+id/btn_copy"
            style="@style/btn_main"
            android:text="Copy"/>

        <EditText
            android:id="@+id/et_bytes1"
            style="@style/btn_main"
            android:text="38F75"/>

        <EditText
            android:id="@+id/et_bytes2"
            style="@style/btn_main"
            android:text="38F75"/>

        <EditText
            android:id="@+id/et_merge"
            style="@style/btn_main"
            android:editable="false"
            android:hint="Merge Result"/>

        <Button
            android:id="@+id/btn_merge"
            style="@style/btn_main"
            android:text="Merge"/>

    </LinearLayout>
</ScrollView>