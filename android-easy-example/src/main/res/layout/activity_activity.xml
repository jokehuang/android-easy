<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout style="@style/ll">

        <ToggleButton
            android:id="@+id/tb_exitable"
            style="@style/btn_main"
            android:textOff="Exitable"
            android:textOn="Exitable"/>

        <TextView
            android:id="@+id/tv_exitable_tips"
            style="@style/btn_main"
            android:gravity="center"
            android:text="请双击后退键测试退出功能"/>

        <ToggleButton
            android:id="@+id/tb_log_life"
            style="@style/btn_main"
            android:textOff="Log Life"
            android:textOn="Log Life"/>

        <TextView
            android:id="@+id/tv_log_life_tips"
            style="@style/btn_main"
            android:gravity="center"
            android:text="请点回到桌面或退出此界面\n从ADT工具观察log"/>
    </LinearLayout>

</ScrollView>