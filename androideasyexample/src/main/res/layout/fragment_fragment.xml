<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/ll" >

        <ToggleButton
            android:id="@+id/tb_hold_view"
            style="@style/btn_main"
            android:textOff="Hold View"
            android:textOn="Hold View" />

        <TextView
            android:id="@+id/tv_hold_view_tips"
            style="@style/btn_main"
            android:gravity="center"
            android:text="请替换Fragment观察UI控件的变化" />

        <ToggleButton
            android:id="@+id/tb_log_life"
            style="@style/btn_main"
            android:textOff="Log Life"
            android:textOn="Log Life" />

        <TextView
            android:id="@+id/tv_log_life_tips"
            style="@style/btn_main"
            android:gravity="center"
            android:text="请替换Fragment从ADT工具观察log" />

        <Button
            android:id="@+id/btn_tag"
            style="@style/btn_main"
            android:text="Tag" />
    </LinearLayout>

</ScrollView>